    <link href="~/ckeditor/samples/sample.css" rel="stylesheet">
    <link href="~/css/visiter.css" type="text/css" rel="stylesheet">
    <style>
        #editable
        {
            padding: 10px;
            float: left;
        }
        th {
    background-color: green;
    color: white;
}
         TextArea
        {
            width: 1000px;
            height: 100px;
        }
    </style>
</head>
<body>
    <h2>Welcome to the Home Section</h2>
    @using (Html.BeginForm("Home", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    { 
    <div class="Menuu">
        <ul>
            <li><a href="@Href("~/Admin/Home")">Home</a></li>
            <li><a href="~/Admin/InsertDesignThink">Design & Think</a></li>
            <li><a href="~/Admin/FilePrintImages">Film & Images</a></li>
            <li><a href="~/Admin/DDDigital">Digital</a></li>
            <li><a href="~/Admin/SpeakMaster">Speak & Contact</a></li>
            <li><a href="~/Admin/CleintMaster">Client Master</a></li>
            <li><a href="~/Admin/ThinkerBody">Thinker Body</a></li>
            <li><a href="~/Admin/SubscriberMailZone">MailZone</a></li>
        </ul>
    </div>
        <br /><br />
        
        <table width="100%">
            <tr>
                <td>Logo path</td><td><input id="upload1" name="upload1" type="file" />
                </td>
            </tr>
            <tr>
                <td colspan="2"><strong>Logo Title1</strong>
                </td>
            </tr>
            <tr>
                <td colspan="2">@Html.TextAreaFor(M => M.objMaster.LogoTitle1, new { @class = "Editor" })     
                </td>
            </tr>
            <tr>
                <td>Logo Title2 </td><td>@Html.TextBoxFor(M => M.objMaster.LogoTitle2)  
                </td>
            </tr>
            <tr>
                <td colspan="2"><strong>Welcome Title</strong></td>
            </tr>
            <tr>
                <td colspan="2">@Html.TextAreaFor(M => M.objMaster.WelcomeTitle, new { @class="Editor2"})  
                </td>
            </tr>
            <tr>
                <td colspan="2"><strong>Welcome Body</strong></td>
            </tr>
            <tr><td colspan="2">@Html.TextAreaFor(M => M.objMaster.WelcomeBody, new { @class = "upload1" })  
                </td>
            </tr>
            <tr>
                <td>
                    Video path</td><td><input id="upload2" name="upload1" type="file" />
                </td>
            </tr>
            <tr>
                <td>FooterDesc1Line</td><td>@Html.TextBoxFor(M => M.objMaster.FooterDescline1)  
                </td>
            </tr>
            <tr>
                <td>FooterDesc2Line</td><td>@Html.TextBoxFor(M => M.objMaster.FooterDescLine2)  
                </td>
            </tr>
            <tr>
                <td>FourQuarterMailId</td><td>@Html.TextBoxFor(M => M.objMaster.FourQuarterMailId)  
                </td>
            </tr>
            <tr>
                <td>SubscribText</td><td>@Html.TextBoxFor(M => M.objMaster.SubscribText)  
                </td>
            </tr>
            <tr>
                <td>Say Hello Text</td><td>@Html.TextBoxFor(M => M.objMaster.SayHello)  
                </td>
            </tr>
            <tr>
                <td colspan="2"><strong>Address</strong></td>
            </tr>
            <tr>
                <td colspan="2">@Html.TextAreaFor(M => M.objMaster.Address , new { @class="Editor3"})  
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input id="Submit1" type="submit" value="Save Home data" />
                </td>
            </tr>
        </table>
        <table width="100%" id="tblData" border="1">
            <tr>
                <th>Logo Title1</th>
                <th>Logo Title2</th>
                <th>Logo Welcome Title</th>
                <th>Logo Welcome Body</th>
            </tr>
            <tr>
                <td><a href="#" onclick="FillEdit(@Model.objMaster.Id); return false;">@Html.Raw(Model.objMaster.LogoTitle1)</a></td>
                <td>@Html.Raw(Model.objMaster.LogoTitle2)</td>
                <td>@Html.Raw(Model.objMaster.WelcomeTitle)</td>
                <td>@Html.Raw(Model.objMaster.WelcomeBody)</td>
            </tr>
        </table>  
    }
  <script>
    $('.jqtetest').jqte();
    $('.Editor').jqte();
    $('.Editor2').jqte();
    $('.Editor3').jqte();
    $('.upload1').jqte();
</script>
</body>
</html>
