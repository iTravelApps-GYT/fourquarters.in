        <script type="text/javascript">
        function FillEdit(obj) {
            $("#hdd").val(obj);
            var $ele = $("#tblData tr td input[value=" + obj + "]");
            if ($ele != null) {
                $('#objDigital_DDlValue').val($ele.attr("data-DDL"));
                $('#objDigital_Heading1').val($ele.attr("data-Head1"));
                $('#objDigital_Desc1').val($ele.attr("data-Desc1"));
                $('#objDigital_Heading2').val($ele.attr("data-Head2"));
                $('#objDigital_Desc2').val($ele.attr("data-Desc2"));
                $('#objDigital_Heading3').val($ele.attr("data-Head3"));
                $('#objDigital_Desc3').val($ele.attr("data-Desc3"));
                $('#objDigital_PopupBody').val($ele.attr("data-PopupBody"));
            }

        }
    </script>
    <script type="text/javascript">
        function Deleterecord(obj) {
            $.ajax({
                type: "post",
                url: "/Admin/DeleterDigital",
                data: { "id": obj },
                success: (function (data) {

                    $("#divDigitalTable").html(data);
                }),
                fail: (function (data) {
                })
            });
        }
    </script>
   <script type="text/javascript">
       function SaveDesignThink() {

          
           alert("BEFOUR");
