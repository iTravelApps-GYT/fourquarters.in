<body>
    <h2>Welcome to the Digital Section</h2>
    @using (Html.BeginForm("DDDigital", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    { 
        <div class="Menuu">
        <ul>
            <li><a href="@Href("~/Admin/Home")">Home</a></li>
            <li><a href="~/Admin/InsertDesignThink">Design & Think</a></li>
            <li><a href="~/Admin/FilePrintImages">Film & Images</a></li>
            <li><a href="~/Admin/DDDigital">Digital</a></li>
            <li><a href="~/Admin/SpeakMaster">Speak & Contact</a></li>
            <li><a href="~/Admin/CleintMaster">Client Master</a></li>
            <li><a href="~/Admin/ThinkerBody">Thinker Body</a></li>
            <li><a href="~/Admin/SubscriberMailZone">MailZone</a></li>
        </ul>
    </div>
        <br /><br />
        <hr color="red"/><h2>Master Panel</h2><hr color="red"/>
                <table width="100%" border="0">
            <tr>
                <td width="200">Digital Title</td>
                <td>@Html.TextBoxFor(M => M.objMaster.DigitalTitle)
                </td>
            </tr>
            <tr>
                <td width="200">Digital Heading</td>
                <td>@Html.TextBoxFor(M => M.objMaster.DigitalHeading)
                </td>
            </tr>
             <tr>
                <td width="200">Digital Description</td>
                <td>@Html.TextBoxFor(M => M.objMaster.DigitalDesc)
                </td>
            </tr>
        </table>
        <hr color="red"/><h2>Digital Panel</h2><hr color="red"/>
        <table width="100%" border="0">
            <tr>
                <td width="200">Add New Item in DropDown Value</td>
                <td>@Html.TextBoxFor(M => M.objDigital.DDlValue)
                </td>
            </tr>
            <tr>
                <td  width="200">Add Image</td><td><input id="upload1" name="upload1" type="file" /></td>
            </tr>
            <tr>
                <td  width="200">Add New Heaqding 1</td><td>@Html.TextBoxFor(M => M.objDigital.Heading1)</td> 
            </tr>
            <tr>
                <td  width="200">Add New Heading 2</td><td>@Html.TextBoxFor(M => M.objDigital.Heading2)</td> 
            </tr>
            <tr>
                <td  width="200">Add New Heading 3</td><td>@Html.TextBoxFor(M => M.objDigital.Heading3)</td> 
            </tr>
            <tr>
                <td colspan="2" align="center">Write Below To Create Description 1</td>
            </tr>
            <tr>
                <td colspan="2" align="center">@Html.TextAreaFor(M => M.objDigital.Desc1, new { @class = "Editor1" })
                </td>
            </tr>
            <tr>
                <td colspan="2" align="center">Write Below To Create Description 2</td>
            </tr>
            <tr>
                <td colspan="2" align="center">@Html.TextAreaFor(M => M.objDigital.Desc2)
                </td>
            </tr>
            <tr>
                <td colspan="2" align="center">Write Below To Create Description 3</td>
            </tr>
            <tr>
                <td colspan="2" align="center">@Html.TextAreaFor(M => M.objDigital.Desc3)
                </td>
            </tr>
             <tr>
                <td colspan="2" align="center">Write Below To Create Popup Body</td>
            </tr>
            <tr>
                <td colspan="2" align="center">@Html.TextAreaFor(M => M.objDigital.PopupBody)
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input id="Submit1" type="submit" value="Save Home data" />
                </td>
            </tr>
        </table>
        <div id="divDigitalTable">
         <table width="100%" id="tblData" border="1">
            <tr>
                <th>Drop Down Value</th>
                <th>Image</th>
                <th>Heading 1</th>
                <th>Description 1</th>
                <th>Heading 2</th>
                <th>Description 2</th>
                <th>Heading 3</th>
                <th>Description 3</th>
                <th>Popup Body</th>
                <th>Action</th>
            </tr>
               @foreach (FourQuarterMVC.Models.Digital obj in Model.objListDigitalM)
               {
                <tr>
                    <td>
                        <input type="hidden" value='@obj.Id' data-DDL='@obj.DDlValue' data-IMG='@obj.ImagePath' data-Head1='@obj.Heading1' data-Desc1='@obj.Desc1' data-Head2='@obj.Heading2' data-Desc2='@obj.Desc2' data-Head3='@obj.Heading3' data-Desc3='@obj.Desc3 ' data-PopupBody='@obj.PopupBody '/>
                       <a href="#" onclick="FillEdit(@obj.Id); return false;"> @obj.DDlValue</a>
                    </td>
                     <td>
                       <span><img src="@Url.Content(String.Format("~/Uploads/{0}",obj.ImagePath))" alt="" width="100px" heigth="100px"/></span>
                    </td>
                     <td>
                       <span>@obj.Heading1</span>
                    </td>
                     <td>
                       <span>@obj.Desc1</span>
                    </td>
                    <td>
                       <span>@obj.Heading2</span>
                    </td>
                    <td>
                       <span>@obj.Desc2</span>
                    </td>
                    <td>
                       <span>@obj.Heading3</span>
                    </td>
                    <td>
                       <span>@obj.Desc3</span>
                    </td>
                    <td>
                       <span>@obj.PopupBody</span>
                    </td>
                    <td>
                       <span><a href="#" onclick="Deleterecord(@obj.Id); return false;">Delete</a></span>
                    </td>
                </tr>
               }
        </table>  
        </div>
        <input type="hidden" id="hdd" name="hdd" value="0" />
    }
 @*   <script>
        $('.Editor1').jqte();
